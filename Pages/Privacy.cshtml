@page
@model PrivacyModel
@{
    ViewData["Title"] = "Employee Directory";
}
<h1 style="font-family: Courier, monospace; font-size: 32px; color: #2c3e50; font-weight: bold; margin-bottom: 24px;">@ViewData["Title"]</h1>

<div class="employee-table-container">
    <table class="employee-table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Hiring Date</th>
                <th>Department</th>
                <th>Job Title</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var emp in Model.Employees)
        {
            <tr>
                <td>@emp.FirstName</td>
                <td>@emp.LastName</td>
                <td>@emp.HiringDate.ToString("yyyy-MM-dd")</td>
                <td>@emp.Department</td>
                <td>@emp.JobTitle</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<style>
    .employee-table-container {
        max-width: 900px;
        margin: 0 auto;
        background: #f8f9fa;
        padding: 32px;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(44,62,80,0.08);
    }
    .employee-table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', Courier, monospace;
        font-size: 18px;
    }
    .employee-table th, .employee-table td {
        border: 1px solid #ddd;
        padding: 12px 16px;
        text-align: left;
    }
    .employee-table th {
        background: #e74c3c;
        color: #fff;
        font-weight: bold;
    }
    .employee-table tr:nth-child(even) {
        background: #f2f2f2;
    }
    .employee-table tr:hover {
        background: #ffe5e0;
    }
</style>
